@page
@model AdministrationPlat.Pages.IndexModel
@{
    ViewData["Title"] = "Login / Register";
}

<div class="auth-page">
    <section class="auth-card">
        <h1>Teacher Portal</h1>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="@Model.MessageCssClass auth-message">
                @Model.Message
            </div>
        }

        <div class="auth-forms">
            <form method="post" asp-page-handler="Login" class="auth-form">
                <h2>Login</h2>
                <div class="form-field">
                    <label asp-for="LoginUsername">Username</label>
                    <input asp-for="LoginUsername" />
                </div>
                <div class="form-field">
                    <label asp-for="LoginPassword">Password</label>
                    <input asp-for="LoginPassword" type="password" />
                </div>
                <div class="auth-actions">
                    <button type="submit" class="button-primary">Sign in</button>
                </div>
            </form>

            <form method="post" asp-page-handler="Register" class="auth-form">
                <h2>Register</h2>
                <div class="form-field">
                    <label asp-for="RegisterUsername">Username</label>
                    <input asp-for="RegisterUsername" />
                </div>
                <div class="form-field">
                    <label asp-for="RegisterPassword">Password</label>
                    <input asp-for="RegisterPassword" type="password" />
                </div>
                <div class="auth-actions">
                    <button type="submit" class="button-secondary">Create account</button>
                </div>
            </form>
        </div>
    </section>
</div>
