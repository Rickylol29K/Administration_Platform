@page
@model AdministrationPlat.Pages.Teacher.Grading

@{
    Layout = "Shared/TeacherLayout";
}

<link rel="stylesheet" href="~/css/Teacher/Grading.css" />

<div class="grading-page">
    <h1>Grading</h1>

    @if (TempData["GradingMessage"] is string message)
    {
        <div class="status-message">@message</div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="validation-summary">
            @foreach (var entry in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@entry.ErrorMessage</p>
            }
        </div>
    }

    <form method="post" asp-page-handler="Load" class="setup-form">
        <div class="form-grid">
            <div>
                <label asp-for="SelectedClassId">Class</label>
                <select asp-for="SelectedClassId">
                    <option value="0">-- pick a class --</option>
                    @foreach (var schoolClass in Model.AvailableClasses)
                    {
                        <option value="@schoolClass.Id">@schoolClass.Name</option>
                    }
                </select>
            </div>
            <div>
                <label asp-for="AssessmentName">Assessment name</label>
                <input asp-for="AssessmentName" />
            </div>
            <div>
                <label asp-for="AssessmentDate">Assessment date</label>
                <input asp-for="AssessmentDate" type="date" />
            </div>
        </div>

        <button type="submit">Show students</button>
    </form>

    @if (Model.SheetLoaded)
    {
        <h2>@Model.ActiveClassName â€” @Model.AssessmentName (@Model.AssessmentDate.ToString("yyyy-MM-dd"))</h2>

        @if (Model.StudentGrades.Count == 0)
        {
            <p>No students found for this class.</p>
        }
        else
        {
            <form method="post" asp-page-handler="Save">
                <input type="hidden" asp-for="SelectedClassId" />
                <input type="hidden" asp-for="AssessmentName" />
                <input type="hidden" asp-for="AssessmentDate" />
                <div class="grades-table">
                    <table>
                        <thead>
                            <tr>
                                <th>Student</th>
                                <th>Score</th>
                                <th>Comment</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < Model.StudentGrades.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <input type="hidden" asp-for="StudentGrades[i].StudentId" />
                                        @Model.StudentGrades[i].StudentName
                                    </td>
                                    <td>
                                        <input asp-for="StudentGrades[i].Score" type="number" step="0.01" min="0" required />
                                    </td>
                                    <td>
                                        <input asp-for="StudentGrades[i].Comment" required />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="overlayButtons">
                    <button type="submit">Save grades</button>
                </div>
            </form>
        }
    }
</div>
