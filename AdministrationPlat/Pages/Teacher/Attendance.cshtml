@page
@model AdministrationPlat.Pages.Shared.Teacher.Attendance

@{
    Layout = "Shared/TeacherLayout";
}

<link rel="stylesheet" href="~/css/Teacher/AttendanceTeacher.css" />

<div class="attendance-page">
    <h1>Take Attendance</h1>

    @if (TempData["AttendanceSaved"] is string savedMessage)
    {
        <div class="status-message">@savedMessage</div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="validation-summary">
            @foreach (var entry in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@entry.ErrorMessage</p>
            }
        </div>
    }

    <form method="post" asp-page-handler="Load" class="attendance-form">
        <div class="form-row">
            <label asp-for="SelectedClassId">Class</label>
            <select asp-for="SelectedClassId">
                <option value="0">-- pick a class --</option>
                @foreach (var schoolClass in Model.AvailableClasses)
                {
                    <option value="@schoolClass.Id">@schoolClass.Name</option>
                }
            </select>
        </div>

        <div class="form-row">
            <label asp-for="SelectedDate">Date</label>
            <input asp-for="SelectedDate" type="date" />
        </div>

        <button type="submit">Show students</button>
    </form>

    @if (Model.RosterLoaded)
    {
        <h2>@Model.ActiveClassName on @Model.SelectedDate.ToString("yyyy-MM-dd")</h2>

        @if (Model.StudentAttendances.Count == 0)
        {
            <p>No students found for this class.</p>
        }
        else
        {
            <form method="post" asp-page-handler="Save">
                <input type="hidden" asp-for="SelectedClassId" />
                <input type="hidden" asp-for="SelectedDate" />

                <div class="studentList">
                    @for (var i = 0; i < Model.StudentAttendances.Count; i++)
                    {
                        <div class="studentAttendance">
                            <input type="hidden" asp-for="StudentAttendances[i].StudentId" />
                            <label>
                                <input type="checkbox" asp-for="StudentAttendances[i].IsPresent" />
                                @Model.StudentAttendances[i].StudentName
                            </label>
                        </div>
                    }
                </div>

                <div class="overlayButtons">
                    <button type="submit">Save attendance</button>
                </div>
            </form>
        }
    }
</div>
