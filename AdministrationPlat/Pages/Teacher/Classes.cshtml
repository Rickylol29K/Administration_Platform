@page
@model AdministrationPlat.Pages.Teacher.Classes

@{
    Layout = "Shared/TeacherLayout";
}

<link rel="stylesheet" href="~/css/Teacher/Classes.css" />

<div class="classes-page">
    <h1>Classes</h1>

    @if (TempData["ClassMessage"] is string classMessage)
    {
        <div class="status-message">@classMessage</div>
    }

    @if (!ViewData.ModelState.IsValid)
    {
        var validationMessages = ViewData.ModelState.Values
            .SelectMany(v => v.Errors)
            .Select(e => e.ErrorMessage)
            .Where(message => !string.IsNullOrWhiteSpace(message))
            .ToList();

        if (validationMessages.Count > 0)
        {
            <div class="validation-summary">
                @foreach (var errorMessage in validationMessages)
                {
                    <p>@errorMessage</p>
                }
            </div>
        }
    }

    <section class="add-class">
        <h2>Class management</h2>
        <p>Classes and student rosters are managed by admins.</p>
    </section>

    <section class="class-list">
        <h2>Your classes</h2>

        @if (Model.TeacherClasses.Count == 0)
        {
            <p>You do not have any classes yet. Use the form above to create one.</p>
        }
        else
        {
            <ul>
                @foreach (var schoolClass in Model.TeacherClasses)
                {
                    <li>
                        <div class="class-card">
                            <div>
                                <strong>@schoolClass.Name</strong>
                                @if (!string.IsNullOrWhiteSpace(schoolClass.Room))
                                {
                                    <span class="muted">Room @schoolClass.Room</span>
                                }
                                @if (!string.IsNullOrWhiteSpace(schoolClass.Description))
                                {
                                    <p class="muted">@schoolClass.Description</p>
                                }
                            </div>
                            <form method="post">
                                <input type="hidden" name="classId" value="@schoolClass.Id" />
                                <button type="submit" asp-page-handler="ShowOverlay">Manage class</button>
                            </form>
                        </div>
                    </li>
                }
            </ul>
        }
    </section>

    @if (Model.ShowOverlay && Model.ActiveClass != null)
    {
        <div id="overlay">
            <div class="overlay-body">
                <h2>@Model.ActiveClass.Name</h2>
                @if (!string.IsNullOrWhiteSpace(Model.ActiveClass.Room))
                {
                    <p class="muted">Room @Model.ActiveClass.Room</p>
                }
                @if (!string.IsNullOrWhiteSpace(Model.ActiveClass.Description))
                {
                    <p>@Model.ActiveClass.Description</p>
                }

                <section class="roster">
                    <h3>Students</h3>
                    @if (Model.ActiveEnrollments.Count == 0)
                    {
                        <p>No students enrolled yet.</p>
                    }
                    else
                    {
                        <ul>
                            @foreach (var enrollment in Model.ActiveEnrollments)
                            {
                                var student = enrollment.Student;
                                if (student == null)
                                {
                                    continue;
                                }
                                <li>
                                    <span>@student.FullName</span>
                                    @if (!string.IsNullOrWhiteSpace(student.Email))
                                    {
                                        <span class="muted">@student.Email</span>
                                    }
                                    <span class="muted">Managed by admin</span>
                                </li>
                            }
                        </ul>
                    }
                </section>

                <form method="post">
                    <input type="hidden" asp-for="SelectedClassId" value="@Model.ActiveClass.Id" />
                    <button type="submit" asp-page-handler="HideOverlay" class="close-btn">Close</button>
                </form>
            </div>
        </div>
    }
</div>
