@page
@model AdministrationPlat.Pages.Teacher.Classes

@{
    Layout = "Shared/TeacherLayout";
}

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div>
    <form method="post">
        <div id="classesMain"> 
            <ul>
                @for (int i = 0; i <= 10; i++)
                {
                    <button type="submit" asp-page-handler="ShowOverlay" name="classId" value="@i">
                        Class @i
                    </button>
                }
            </ul>
        </div>
        
        @if (Model.ShowOverlay)
        {
            <div id="overlay">
                <h1>Currently viewing class @Model.SelectedClassId</h1>
                <h3>Class information (Later from database) will be displayed below</h3>
                
            </div>
        }
    </form>
</div>
</body>
</html>